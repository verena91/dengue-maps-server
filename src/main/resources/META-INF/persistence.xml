<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<!-- If you are using JBoss AS7 with non JTA transaction then use this persistence-unit -->
	<!--
	-->

	<persistence-unit name="bookmark-ds" transaction-type="RESOURCE_LOCAL">
		<non-jta-data-source>java:/bookmarkDS</non-jta-data-source>

		<class>py.una.pol.denguemaps.domain.Bookmark</class>
		<class>py.una.pol.denguemaps.domain.Usuario</class>
		<class>py.una.pol.denguemaps.domain.Rol</class>
		<class>py.una.pol.denguemaps.domain.Permiso</class>
		
		<properties>
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />
		</properties>
	</persistence-unit>

